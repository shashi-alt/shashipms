<%- include('header') %>
  <div class="container">
    <div class="row">
      <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">Edit  Password </div>
          </div>
          <div class="pannel-body">
            <form action="/password_details/edit/<%= record._id%>" id="passwordForm" class="form-horizontal" method="post" role="form">
              <% if (success !='' ){ %>
                <p style="text-align: center; color: blue;">
                  <%=success%>
                </p>
                <%}%>
                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">password Details</label>
                    <div class="col-md-8">



                      <select class="form-control" name="pass_cat">

                        <option value="">choose password category</option>
                        <% if(records.length> 0){
                          records.forEach(function(row){
                          %>

                          <option value="<%= row.password_category %>"<% if(row.password_category== record.password_category){ %>Selected<% } %>>
                            <%= row.password_category %>
                          </option>
                          <%}) }%>

                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Project Name</label>
                    <div class="col-md-8">
                      <input type="text-box" class="form-control" name="project_name"
                        placeholder="Enter Your Project name" value="<%= record.project_name %>">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">password Details</label>
                    <div class="col-md-8">
                      <textarea class="form-control" id="editor1" name="pass_details" rows="5"
                        placeholder="Enter Your password details"><%= record.password_detail %></textarea>
                    </div>
                  </div>
                  <input type="hidden" name="id" value="<%= record._id%>">
                  <div class="form-group">
                    <!-- Button -->
                    <div class="col-md-offset-3 col-md-9">
                      <input type="submit" name="submit" value="Update Password" class="btn btn-primary">
                    </div>
                  </div>
                  <p>For All Password Details <a href="/view-all-password">Click Here</a></p>

            </form>
          </div>
        </div>




      </div>
    </div>
  </div>

  <script>
    CKEDITOR.replace('editor1');
  </script>

</body>

</html>
<%- include('footer') %>